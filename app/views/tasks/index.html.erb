<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <input type="checkbox" name="task" checked>
    <% else %>
      <input type="checkbox" name="task">
    <% end %>

    <label for="task"><%= link_to task.title, task_path(task) %></label>
  </li>
  <% end %>
</ul>
