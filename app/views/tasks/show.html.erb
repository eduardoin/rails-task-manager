<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<div>
  <% if @task.completed %>
    <input disabled="" type="checkbox" name="task" checked>
    <label for="">This task is completed</label>
  <% else %>
    <input disabled="" type="checkbox" name="task">
    <label for="">This task is not completed yet</label>
  <% end %>
</div>

<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Delete', task_path(@task), method: :delete %>
<%= link_to 'Back to List', tasks_path %>
